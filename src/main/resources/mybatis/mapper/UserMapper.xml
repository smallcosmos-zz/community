<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hmily.community.mapper.UserMapper">
<!--    插入用户-->
    <insert id="insertUser" parameterType="User">
        insert into user (account_id,name,token,gmt_create,gmt_modified,avatar_url)
        values (#{accountId},#{name},#{token},#{gmtCreate},#{gmtModified},#{avatarUrl})
    </insert>
<!--    根据token查询用户-->
    <select id="getUserByToken" parameterType="String" resultType="User">
        select * from user
        where token = #{token}
    </select>

    <select id="getUserByAccountId" parameterType="String" resultType="User">
        select * from user
        where account_id = #{account_id}
    </select>

    <update id="updateUser" parameterType="User">
        update user
        set
        name=#{name},
        token=#{token},
        gmt_modified=#{gmtModified},
        avatar_url=#{avatarUrl}
        where
        id=#{id}
    </update>
</mapper>